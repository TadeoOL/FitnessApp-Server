{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
       "./src/types"
    ],
    "types": ["node", "express"],
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true
  }, 
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}